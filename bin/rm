#! /bin/bash
set -euo pipefail

case "$OSTYPE" in
  # macOS
  darwin*)
    for path in "$@"; do
      # Ignore any arguments
      if [[ "$path" = -* ]]; then :
      else
        dst=${path##*/}

        # Append the time if necessary
        while [ -e "$HOME/.Trash/$dst" ]; do
          dst="$dst $RANDOM"
        done

        /bin/mv "$path" "$HOME/.Trash/$dst"
      fi
    done

    echo ""
  ;;
esac
