[alias]
  cam = commit -am
  co  = checkout
  undo = reset --soft HEAD^

[branch]
  autosetuprebase = always
  rebase = true
  sort = -committerdate

[color]
  interactive = true

[commit]
  gpgsign = true
  sign = true

  # Defining a `template` is cool and works well when committing stuff via terminal,
  # but Fork app include comments in the commit message :(
  # template = ~/projects/.personal_configs/.gitmessage

[core]
  quotepath = false
  excludesfile = ~/.gitignore_global
  mergeoptions = --no-edit

[credential]
  helper = osxkeychain

[diff]
  color = auto
  colorMoved = plain
  noprefix = true
  algorithm = histogram
  mnemonicPrefix = true
  renames = true

[fetch]
  prune = true
  pruneTags = true
  all = true

[gpg]
  format = ssh

[help]
  autocorrect = prompt

[http]
  postBuffer = 157286400

[include]
  # Use separate file for username, email, tokens, etc.
  path = ~/projects/.personal_configs/.gitconfig.private

[init]
  templatedir = ~/.dotfiles/files/git_template
  defaultBranch = main

[merge]
  conflictstyle = zdiff3 # https://blog.gitbutler.com/how-git-core-devs-configure-git/#better-merge-conflicts

[pull]
  rebase = true

[push]
  default = simple
  autoSetupRemote = true # This isn't need if `default = current`
  followTags = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  enabled = true
  autoupdate = true

[tag]
  sort = version:refname
